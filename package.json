{
  "name": "@ralph/ralph-ui",
  "module": "./index.js",
  "version": "1.0.0",
  "description": "Component library for Carismar",
  "author": "Lars Johansson",
  "private": false,
  "scripts": {
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "create-index-files": "node ./scripts/create-index-files.cjs",
    "create-component": "node ./scripts/create-component.cjs",
    "documentation": "vuese gen",
    "documentation-serve": "vuese gen && vuese serve --open"
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "flag-icon-css": "^3.5.0",
    "hooper": "^0.3.4"
  },
  "vuese": {
    "outDir": "documentation"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.3",
    "@vuese/cli": "^2.13.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": "^0.5.2",
    "eslint-plugin-prettier": "^3.1.4",
    "file-save": "^0.2.0",
    "husky": "^4.2.5",
    "jest": "^24.1.0",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^10.1.0",
    "svg-inline-loader": "^0.8.2",
    "uppercamelcase": "^3.0.0",
    "vue-jest": "^4.0.0-beta.3"
  }
}
