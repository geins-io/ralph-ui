{
  "name": "@ralph/ralph-ui",
  "module": "./index.js",
  "version": "16.2.0",
  "description": "Component library for Carismar Commerce Storefront ",
  "author": "Carismar Commerce Team",
  "private": false,
  "scripts": {
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "create-index-files": "node ./scripts/create-index-files.cjs",
    "create-component": "node ./scripts/create-component.cjs",
    "documentation": "vuese gen",
    "documentation-serve": "vuese gen && vuese serve --open"
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "body-scroll-lock": "^3.1.5",
    "broadcast-channel": "^4.10.0",
    "graphql-combine-query": "^1.2.3",
    "nuxt-speedkit": "^2.0.8",
    "vue-slide-up-down": "^2.0.1",
    "vue-slider-component": "^3.2.14",
    "vue-vimeo-player": "^0.2.2",
    "vue-youtube": "^1.4.0"
  },
  "vuese": {
    "outDir": "documentation",
    "include": [
      "**/*.vue",
      "components/mixins/**/*.js"
    ],
    "exclude": "scripts/component-template/component.vue",
    "host": "127.0.0.1",
    "port": 6001
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^4.0.0",
    "@vue/test-utils": "^1.2.2",
    "@vuese/cli": "^2.14.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "file-save": "^0.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "prettier": "^1.19.1",
    "sass-loader": "^10.2.0",
    "stylelint": "^13.13.1",
    "uppercamelcase": "^3.0.0",
    "vue-jest": "^4.0.1"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://carismarsoftware.visualstudio.com/Ralph/_git/Ralph-UI"
  },
  "license": "UNLICENSED"
}
