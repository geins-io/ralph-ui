{
  "name": "@ralph/ralph-ui",
  "module": "./index.js",
  "version": "1.1.0",
  "description": "Component library for Ralph Storefront by Carismar",
  "author": "Olivia Axelsson & Lars Johansson",
  "private": false,
  "scripts": {
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "create-index-files": "node ./scripts/create-index-files.cjs",
    "create-component": "node ./scripts/create-component.cjs",
    "documentation": "vuese gen",
    "documentation-serve": "vuese gen && vuese serve --open"
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "flag-icon-css": "^3.5.0",
    "hooper": "^0.3.4"
  },
  "vuese": {
    "outDir": "documentation",
    "include": [
      "**/*.vue",
      "components/mixins/**/*.js"
    ],
    "exclude": "scripts/component-template/component.vue"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^4.0.0",
    "@vue/test-utils": "^1.1.1",
    "@vuese/cli": "^2.14.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "file-save": "^0.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "node-sass": "^5.0.0",
    "prettier": "^1.19.1",
    "sass-loader": "^10.0.5",
    "stylelint": "^13.7.2",
    "svg-inline-loader": "^0.8.2",
    "uppercamelcase": "^3.0.0",
    "vue-jest": "^4.0.0-rc.0"
  }
}
